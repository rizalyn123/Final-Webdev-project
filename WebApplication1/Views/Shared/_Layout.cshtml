            <nav id="navbar" class="navbar">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li><a class="nav-link scrollto" href="#features">Features</a></li>
                    <li><a class="nav-link scrollto" href="#screenshots">Screenshots</a></li>
                    <li><a class="nav-link scrollto" href="#team">Team</a></li>
                    <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
                    <li>@Html.ActionLink("Register", "GetStarted", "Home", new { style = "font-weight: bold; text-decoration: underline"})</li>
                    <li>@Html.ActionLink("Login", "Login", "Home", new { style = "font-weight: bold; text-decoration: underline" })</li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
